{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <h1>Tag index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <a class="text-decoration-none text-center text-white" href="{{ path('admin.tag.edit', {'id': tag.id}) }}"><button class="btn btn-primary">Edit</button></a>
                    <a class="text-decoration-none text-center text-white dellink" onclick="return confirm('are u sure?')" href="{{ path('admin.tag.delete', { 'id': tag.id }) }}"><button class="btn btn-danger">Delete</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
